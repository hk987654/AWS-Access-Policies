{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowPermissionsToCrossAccountS3",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject",
          "s3:PutObjectAcl",
          "s3:ListBucket"
        ],
        "Resource": [
          "<S3_Bucket_ARN>", # Replace <S3_Bucket_ARN> with ARN of Bucket to be shared.
          "<S3_Bucket_ARN>/*", # Replace <S3_Bucket_ARN> with ARN of Bucket to be shared.
        ]
      }
    ]
  }
