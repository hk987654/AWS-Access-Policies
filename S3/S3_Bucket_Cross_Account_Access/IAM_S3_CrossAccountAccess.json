{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowPermissionsToCrossAccountS3",
        "Effect": "Allow",
        "Action": [
          "s3:PutObject",
          "s3:PutObjectAcl",
          "s3:ListBucket"
        ],
        "Resource": [
          "arn:aws:s3:::<Bucket_Name>", # Replace <Bucket_Name> with Bucket Name to be shared.
          "arn:aws:s3:::<Bucket_Name>*" # Replace <Bucket_Name> with Bucket Name to be shared.
        ]
      }
    ]
  }
